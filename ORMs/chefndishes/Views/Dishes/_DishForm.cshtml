@model Dish

<form asp-action="CreateDish" method="post"asp-controller="Dishes" class="d-flex justify-content-center gap-4">
    <div class="d-flex flex-column gap-4">
        <div class="d-flex flex-column gap-4">
            <label asp-for="DishName" class="form-label"></label>
            <input asp-for="DishName"/>
            <span asp-validation-for="DishName" class="text-danger font-weight-bold"></span>
        </div>
        <div class="d-flex flex-column gap-4">
            <label asp-for="Calories" class="form-label"></label>
            <input asp-for="Calories"/>
            <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
        </div>
    </div>

    <div class="d-flex flex-column gap-4">
        <div class="d-flex flex-column gap-4">
            <label for="ChefId" class="form-label">Name of Chef</label>
            <select asp-for="ChefId">
                <option hidden></option>
                @foreach(Chef  chefs in  ViewBag.allChefs)
                {
                    <option value="@chefs.ChefId">@chefs.FirstName @chefs.LastName</option>
                }
            </select>
            <span asp-validation-for="ChefId" class="text-danger font-weight-bold"></span> 
        </div>
    </div>

    <div class="d-flex flex-column gap-4">
        <label asp-for="Tastiness" class="form-label"></label>
        <select asp-for="Tastiness">
            <option hidden></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness" class="text-danger font-weight-bold"></span>
        <button type="Submit" class="btn btn-success">Add Dish</button>
    </div>
</form>