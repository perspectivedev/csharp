@model Coupon
        <form asp-action="CreateCoupon" asp-controller="Coupon" method="post" class="card card-border-2 d-flex flex-column p-4">
            <div class="d-flex">
                <label asp-for="CouponCode" class="form-label align-content-end  align-self-center w-25 p-2"></label>
                <input asp-for="CouponCode" class="form-control justify-content-start align-self-center bg-light" />
                <span asp-validation-for="CouponCode" class="text-danger font-weight-bold flex-fill"></span>
            </div>
            <div class="d-flex">
                <label asp-for="Website" class="form-label align-content-end  align-self-center w-25 p-2"></label>
                <input asp-for="Website" class="form-control justify-content-start align-self-center bg-light" />
                <span asp-validation-for="Website" class="text-danger font-weight-bold flex-fill"></span>
            </div>
            <div class="d-flex">
                <label asp-for="Description" class="form-label align-content-end  align-self-center w-25 p-2"></label>
                <input asp-for="Description" class="form-control justify-content-start align-self-center bg-light" />
                <span asp-validation-for="Description" class="text-danger font-weight-bold flex-fill"></span>
            </div>
            <div>
                <button type="Submit" class="btn btn-primary">Add Coupon</button>
            </div>
        </form>